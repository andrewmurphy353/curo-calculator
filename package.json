{
  "name": "@curo/calculator",
  "version": "1.0.1",
  "description": "A feature-rich library for performing simple to advanced instalment credit financial calculations.",
  "keywords": [
    "finance calculator",
    "instalment credit",
    "leasing",
    "loans",
    "hire purchase",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewmurphy353/curo-calculator.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "assets",
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tslint --fix -p tsconfig.json",
    "type-check": "tsc --noEmit",
    "test": "nyc mocha",
    "build": "npm test && rollup -c",
    "watch": "rollup -cw"
  },
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/index.ts"
    ],
    "reporter": [
      "json",
      "text",
      "html"
    ],
    "temp-dir": "./coverage/.nyc_output",
    "cache": true
  },
  "author": {
    "name": "Andrew Murphy",
    "email": "andrew.murphy@confido.ie",
    "url": "https://github.com/andrewmurphy353"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewmurphy353/curo-calculator/issues"
  },
  "homepage": "https://github.com/andrewmurphy353/curo-calculator#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.24",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.2.0",
    "rollup": "^1.1.2",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-typescript2": "^0.19.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {}
}
